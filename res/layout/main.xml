<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/button_table"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background">
<TableRow
	android:paddingTop="64dp">
	<ImageButton
		android:layout_weight="1"
	
		android:id="@+id/schedule_button"
		android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
		android:src="@drawable/schedule_image_button"
		android:background="#00000000"
		android:layout_gravity="center"/>
	<ImageButton
	android:layout_weight="1"
	
		android:id="@+id/balance_button"
		android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
		android:background="#00000000"
		android:src="@drawable/balance_image_button"
		android:layout_gravity="center"/>
	
</TableRow>
<TableRow
		android:layout_width="wrap_content" android:baselineAligned="true" android:paddingTop="47dp">
    <ImageButton android:src="@drawable/map_image_button" 
    android:layout_weight="1"
    android:id="@+id/map_button" 
    android:layout_height="wrap_content" 
    android:layout_gravity="center" 
    android:layout_width="wrap_content" 
    android:background="#00000000"></ImageButton>
    
    <ImageButton android:src="@drawable/data_image_button" 
    android:layout_weight="1"
    android:id="@+id/data_button" 
    android:layout_height="wrap_content" 
    android:layout_gravity="center" 
    android:layout_width="wrap_content" 
    android:background="#00000000"></ImageButton>
		
</TableRow> 

