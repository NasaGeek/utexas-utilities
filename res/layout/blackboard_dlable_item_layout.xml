<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_gravity="center_horizontal">
    
    <include android:id="@+id/blackboard_dl_items_progressbar_ll" layout="@layout/loading_content_layout"
        	 android:layout_centerInParent="true"/>
    
    <TextView
        android:id="@+id/content_description_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	android:text="Content Description"
    	android:textSize="22sp"
    	android:paddingTop="10dp"
    	android:layout_centerHorizontal="true"
    	android:layout_centerVertical="true"
    	android:gravity="center"
    	android:layout_alignParentTop="true"/>
    
    <ImageView 
        android:id="@+id/content_description_separator"
        android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:layout_below="@id/content_description_title"
		android:src="#99AAAAAA"
		android:layout_marginTop="10dp"
		android:layout_centerHorizontal="true"
		
		/>"

	<ScrollView android:id="@+id/scroll_content_description"
	    android:layout_below="@+id/content_description_separator"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_centerVertical="true"
	    android:fillViewport="false"
	    android:isScrollContainer="true">
	    <TextView
	        android:id="@+id/content_description" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="10dp"
	        android:textSize="15sp"
	    	android:visibility="gone"/>
    </ScrollView>    
    
    <ImageView 
        android:id="@+id/content_attachment_separator"
        android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:layout_below="@id/scroll_content_description"
		android:src="#99AAAAAA"
		android:layout_marginTop="10dp"
		android:layout_centerHorizontal="true"
		
		/>
    <ListView
        android:id="@+id/dlable_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="#FFCCCCCC"
        android:dividerHeight="1dp"
        android:layout_below="@id/content_attachment_separator"/>

</RelativeLayout>