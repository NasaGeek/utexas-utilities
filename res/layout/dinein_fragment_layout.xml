<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dineinlinlay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/dinein_progressbar_ll"
        layout="@layout/loading_content_layout" />
    <include
        android:id="@+id/dinein_error"
        layout="@layout/error_message_view"/>

    <com.foound.widget.AmazingListView
        android:id="@+id/dtransactions_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:cacheColorHint="@android:color/transparent"
		android:background="@android:color/transparent"
        android:paddingTop="10dp"
        android:scrollbars="none"
        android:visibility="gone" />

</LinearLayout>