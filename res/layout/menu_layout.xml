<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menutabhost"
   
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">        
                <LinearLayout 
                    android:id="@+id/menu_tab_linlayout"
                    android:layout_width="fill_parent" 
                    android:layout_height="fill_parent" 
                    android:orientation="vertical">
                    <TabWidget
                        android:id="@android:id/tabs"
                        
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
                    <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                   
                   <LinearLayout 
                                    android:id="@+id/breakfastlinlay"
                                    android:layout_width="fill_parent" 
                                    android:layout_height="fill_parent" 
                                    android:orientation="vertical">
                                         
                                     <include android:id="@+id/breakfast_progressbar_ll" layout="@layout/loading_content_layout"/>    
                                         
                                         <com.foound.widget.AmazingListView
                                           
                                            android:id="@+id/breakfast_listview"
                                            android:layout_width="fill_parent" 
                                            android:layout_height="fill_parent" 
                                            android:orientation="vertical" 
                                            
                                            />
                                            
                                            
                                </LinearLayout>
                                <LinearLayout 
                                    android:id="@+id/lunchlinlay"
                                    android:layout_width="fill_parent" 
                                    android:layout_height="fill_parent" 
                                    android:orientation="vertical">
                                         
                                     <include android:id="@+id/lunch_progressbar_ll" layout="@layout/loading_content_layout"/>    
                                         
                                         <com.foound.widget.AmazingListView
                                           
                                            android:id="@+id/lunch_listview"
                                            android:layout_width="fill_parent" 
                                            android:layout_height="fill_parent" 
                                            android:orientation="vertical" 
                                            
                                            />
                                            
                                            
                                </LinearLayout>
                                <LinearLayout 
                                    android:id="@+id/dinnerlinlay"
                                    android:layout_width="fill_parent" 
                                    android:layout_height="fill_parent" 
                                    android:orientation="vertical">
                                         
                                     <include android:id="@+id/dinner_progressbar_ll" layout="@layout/loading_content_layout"/>    
                                         
                                         <com.foound.widget.AmazingListView
                                           
                                            android:id="@+id/dinner_listview"
                                            android:layout_width="fill_parent" 
                                            android:layout_height="fill_parent" 
                                            android:orientation="vertical" 
                                            
                                            />
                                            
                                            
                                </LinearLayout>
                                
                         </FrameLayout>  
                </LinearLayout>
</TabHost>