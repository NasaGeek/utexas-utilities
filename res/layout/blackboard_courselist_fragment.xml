<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blackboard_courselist"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_holo_light"
    android:orientation="vertical" >

    <include
        android:id="@+id/blackboard_progressbar_ll"
        layout="@layout/loading_content_layout"
        android:visibility="gone" />

    <include
        android:id="@+id/blackboard_error"
        layout="@layout/error_message_view" />

    <com.foound.widget.AmazingListView
        android:id="@+id/blackboard_class_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent" />

</LinearLayout>