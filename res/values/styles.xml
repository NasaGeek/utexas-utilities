<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.UTilities" parent="@style/Theme.AppCompat.Light">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="colorPrimary">@color/burnt_orange</item>
        <item name="colorPrimaryDark">@color/burnt_orange_dark</item>
        <item name="colorAccent">@color/blue_accent</item>
        <item name="toolbarStyle">@style/Toolbar.UTilities</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextView.UTilities</item>
        <item name="textAppearanceSearchResultSubtitle">@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse</item>
        <item name="textAppearanceSearchResultTitle">@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="Theme.UTilities.NoShadow">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.UTilities.Preferences">
        <item name="android:activatedBackgroundIndicator">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AutoCompleteTextView.UTilities" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground">@android:color/background_light</item>
    </style>

    <style name="Toolbar.UTilities" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Preference_TextAppearanceMaterialBody2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TabLayout.UTilities" parent="Widget.Design.TabLayout">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabBackground">?attr/colorPrimary</item>
        <item name="tabTextAppearance">@style/TextAppearance.Tab.UTilities</item>
        <item name="tabSelectedTextColor">@android:color/primary_text_dark</item>
    </style>

    <style name="TextAppearance.Tab.UTilities" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>

    <style name="Text.MenuTime" parent="android:Widget">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>