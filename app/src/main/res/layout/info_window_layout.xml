<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iw_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
  
     <ImageView
        android:id="@+id/iw_center_text_hack"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/ic_list_folder"
        android:scaleType="center"
        android:visibility="invisible" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
	    <TextView
	        android:id="@+id/iw_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:ellipsize="end"
	        android:lines="1"
            tools:text="Window Title"/>
	    <TextView
	        android:id="@+id/iw_snippet"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:gravity="center"
            tools:text="Window Snippet"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iw_tap_me_indicator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/ic_list_folder"
        android:scaleType="center" />

</LinearLayout>